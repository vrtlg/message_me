<h1 class="ui center aligned header">Welcome to Message Me - <em>a complete Chat App</em></h1>
<h3 class="ui center aligned icon header">
  <i class="comment alternate outline icon teal"></i>
  Please log in or sign up to continue
</h3>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_for :session, url: login_path do |f|%>
          <div class="field">
            <%= f.label :username, class:"label" %>
          <div class="ui left icon input">
              <%= f.text_field :username, placeholder:"Username", class:"input" %>
          <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, class:"label"%>
          <div class="ui left icon input">
            <%=f.password_field :password, placeholder:"Password", class:"input" %>
            <i class="lock icon"></i>
          </div>
        </div>
          <%=f.submit "Login", class:"ui teal submit button"%>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big teal button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
